<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:padding="16dp"
    tools:context=".SoundCollectionActivity">
    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="#666" />

    <TextView
        android:id="@+id/textView_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/orange"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_below="@id/view_1"
        android:text="Please put the microphone close to your throat and start recording"
        />
    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView_1"
        android:background="#666" />

    <TextView
        android:id="@+id/textView_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/tomato"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_below="@id/view_2"
        android:text="In order to accurately measure the data, please use it in a quiet environment"
        />
    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView_2"
        android:background="#666" />
    <ProgressBar
        android:id="@+id/sound_upload_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="invisible"/>
    <com.example.finalproject.widget.WaveView
        android:id="@+id/wave_view"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:baselineColor="@color/transparent"
        app:waveColor="@color/green"
        app:waveStokeWidth="1dp" />

    <jaygoo.widget.wlv.WaveLineView
        android:id="@+id/waveLineView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/wave_view"
        app:wlvBackgroundColor="@color/transparent"
        app:wlvLineColor="@color/green"
        app:wlvMoveSpeed="290"
        app:wlvSensibility="9" />

    <LinearLayout
        android:id="@+id/liner_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/waveLineView">
        <TextView
            android:id="@+id/tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="2"
            android:textSize="15sp" />
        <Button
            android:id="@+id/sound_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/tomato"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="Analyze"/>

    </LinearLayout>
    <TextView
        android:id="@+id/soundResultPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#1E90FF"
        />
    <TextView
        android:id="@+id/soundConfidencePercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_below="@+id/soundResultPrediction"
        android:text=""
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#1E90FF"
        />


    <Button
        android:id="@+id/register_record_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/recorder_btn"
        android:text="Hold to speak"
        android:textColor="#FFFFFF" />

</RelativeLayout>
